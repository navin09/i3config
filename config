# Lock screen shortcut
bindsym Mod1+Control+l exec i3lock -c 000000 -i ~/Pictures/lockscreen.png

# move floating windows with keys
bindsym $mod+m mode "move" focus floating
mode "move" {
    bindsym $mod+Tab focus right

    bindsym Left  move left
    bindsym Down  move down
    bindsym Up    move up
    bindsym Right move right

    bindsym h     move left
    bindsym j     move down
    bindsym k     move up
    bindsym l     move right

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# widow border size in pixels (0 turns off)
new_window normal 1

# default workspace layout
workspace_layout tabbed

# Custom title format
for_window [class=".*"] title_format "  <span size='smaller'>%title</span>"

# Backlight
bindsym XF86MonBrightnessUp exec xbacklight -inc 2
bindsym XF86MonBrightnessDown exec xbacklight -dec 2

# Network manager applet
exec --no-startup-id nm-applet

## Volume control (i3-volume)

# Path to volume control, without trailing slash
set $volumepath ~/scripts

# Command for the status line
#   ie: i3blocks, i3status
set $statuscmd i3status

# Signal used to update the status line
#   i3blocks uses SIGRTMIN+10 by default
#   i3status uses SIGUSR1 by default
set $statussig SIGUSR1

# Amount to increase/decrease volume as a percentage
set $volumestep 5

# pulseaudio-utils settings
#
# Symbolic name for sink (numeric index not supported)
#   Recommended: comment out this setting and omit the -s option to use default sink
#   List sink names: pacmd list-sinks | awk -F "[<>]" '/^\s+name: <.*>/{print $2}'
#set $sinkname alsa_output.pci-0000_00_1b.0.analog-stereo

# Using pulseaudio-utils (append "-s $sinkname" without quotes to override default sink)
bindsym XF86AudioRaiseVolume exec --no-startup-id $volumepath/volume -n -t $statuscmd -u $statussig up $volumestep
bindsym XF86AudioLowerVolume exec --no-startup-id $volumepath/volume -n -t $statuscmd -u $statussig down $volumestep
bindsym XF86AudioMute        exec --no-startup-id $volumepath/volume -n -t $statuscmd -u $statussig mute

# Show a battery warning on low battery
exec --no-startup-id ~/scripts/i3-battery-popup -L 35 -l 15 -t 5m -n -N -s ~/scripts/i3-battery-popup.wav 

# Run the Policykit Agent
exec --no-startup-id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1 &

# Run prank 'Activate Linux'
exec --no-startup-id activate-linux &

# Compositing (compton)
# seq 0 3 | xargs -l1 -I@ compton -b -d :0.@  # Multihead support
# exec --no-startup-id "compton -b"
# exec --no-startup-id compton --opacity-rule '80:window_type = "dock" && class_g = "i3bar"' --config ~/.config/compton.conf -b
